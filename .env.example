# SAVAGE ENVIRONMENT CONFIGURATION TEMPLATE!!! üåçüî•üåç

# ==============================================
# DATABASE CONFIGURATION - THE DATA FORTRESS!!!
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=worker_checkin
DB_USER=postgres
DB_PASSWORD=your-secure-database-password

# ==============================================
# REDIS CONFIGURATION - SPEED DEMON!!!
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# ==============================================
# JWT CONFIGURATION - SECURITY FORTRESS!!!
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=24h

# ==============================================
# ADMIN CONFIGURATION - ADMIN OVERLORD!!!
# ==============================================
ADMIN_PASSWORD=your-secure-admin-password

# ==============================================
# SERVER CONFIGURATION - THE BEAST!!!
# ==============================================
NODE_ENV=production
PORT=3001
API_URL=http://localhost:3001/api

# ==============================================
# SSL CONFIGURATION - SECURITY SHIELD!!!
# ==============================================
SSL_CERT_PATH=/path/to/your/cert.pem
SSL_KEY_PATH=/path/to/your/key.pem

# ==============================================
# LOGGING CONFIGURATION - MONITORING EYE!!!
# ==============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ==============================================
# PERFORMANCE CONFIGURATION - SPEED SETTINGS!!!
# ==============================================
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30000
QUERY_TIMEOUT=30000

# ==============================================
# FEATURE FLAGS - POWER SWITCHES!!!
# ==============================================
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
ENABLE_PERFORMANCE_MONITORING=true

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==============================================
# BACKUP CONFIGURATION (Optional)
# ==============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30