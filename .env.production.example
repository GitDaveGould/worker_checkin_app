# Production Environment Variables for AWS App Runner

NODE_ENV=production
PORT=3001

# Database (AWS RDS PostgreSQL)
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=worker_checkin_prod
DB_USER=postgres
DB_PASSWORD=your-secure-password

# Redis (AWS ElastiCache - optional for now)
REDIS_HOST=your-redis-endpoint.cache.amazonaws.com
REDIS_PORT=6379

# JWT Secret (use AWS Systems Manager Parameter Store)
JWT_SECRET=your-super-secure-jwt-secret-key

# Admin Password
ADMIN_PASSWORD=your-secure-admin-password

# API URL (will be your App Runner URL)
API_URL=https://your-app-runner-url.region.awsapprunner.com/api

# Logging
LOG_LEVEL=info